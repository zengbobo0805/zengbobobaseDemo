<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2dp"
    android:background="@color/color_ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp" >

        <ImageView
            android:id="@+id/v5_speci_price_image"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/speci_price_image"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/v5_sp_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:minLines="2"
                android:text="上海欢乐谷 上海欢乐谷 上海欢乐谷"
                android:textColor="@color/color_333333"
                android:textSize="16dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/v5_sp_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_f35636"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:text="5折"
                    android:textColor="@color/color_ffffff"
                    android:textSize="14dp"
                    android:layout_alignParentLeft="true" 
                    android:gravity="bottom"/>

                <TextView
                    android:id="@+id/v5_sp_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rmb"
                    android:textColor="@color/color_f35636"
                    android:textSize="15dp" 
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/v5_sp_sale"
                    android:layout_alignBottom="@+id/v5_sp_sale"
                    android:gravity="bottom"/>

                <TextView
                    android:id="@+id/v5_sp_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="3000"
                    android:textColor="@color/color_f35636"
                    android:textSize="20dp" 
                    android:layout_toRightOf="@+id/v5_sp_price_1"
                    android:layout_alignBaseline="@+id/v5_sp_sale"
                    android:gravity="top"
                    />

                <TextView
                    android:id="@+id/v5_sp_yuanjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原价"
                    android:textColor="@color/color_999999"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/v5_sp_price" 
                    android:layout_alignBottom="@+id/v5_sp_sale"
                    android:gravity="bottom"/>

                <TextView
                    android:id="@+id/v5_sp_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥6000"
                    android:textColor="@color/color_999999"
                    android:textSize="14dp"
                    android:layout_toRightOf="@+id/v5_sp_yuanjia" 
                    android:layout_alignBottom="@+id/v5_sp_sale"
                    android:gravity="bottom"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/v5_sp_had_buyers_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="已有3000人购买"
                    android:textColor="@color/color_333333"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/v5_sp_leave_buyers_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="仅余2000个名额"
                    android:textColor="@color/color_333333"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 闹钟行 -->

    <View
        android:id="@+id/line_check"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@drawable/buy_line"
        android:contentDescription="@string/line"
        android:orientation="horizontal"
        android:visibility="visible" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingTop="3dp"
        android:paddingBottom="3dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/alarm_clock"
            android:drawablePadding="2dp"
            android:layout_gravity="center"
            android:text="@string/speci_price_leave_time"
            android:textColor="@color/color_f35636"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="2dp" >

            <TextView
                android:id="@+id/timer0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_gravity="center"
                android:layout_marginRight="2dp"
                android:layout_weight="0.00"
                android:background="@color/color_5d5c5c"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timer1"
                android:layout_width="wrap_content"
