<?xml version="1.0" encoding="utf-8"?>
<!-- 爆款 -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" >

            <!-- vip特惠布局 -->

            <LinearLayout
                android:id="@+id/vip_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v5_top"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_ffffff"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/v5_specail_price_listview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f1f1f1"
                    android:padding="10dp"
                    android:text="APP专享特惠"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ListView
                        android:id="@+id/v5_special_price_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:divider="@color/color_f35636"
                        android:dividerPadding="10dp"
                        android:fadingEdge="none"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 爆款抢购布局 -->

            <LinearLayout
                android:id="@+id/layout_btm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vip_Layout"
                android:orientation="vertical" >
            </LinearLayout>

            <!-- 返回，分享布局 -->

            <LinearLayout
                android:id="@+id/v5_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/v5_special_price_top_bg"
                android:gravity="top"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/v5_sp_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:layout_margin="5dp"
                        android:background="@drawable/v5_special_price_back_bg"
                        android:gravity="start" >

                        <ImageView
                            android:id="@+id/v5_special_price_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/back" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/v5_sp_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="5dp" >

                        <ImageView
                            android:id="@+id/v5_special_price_share"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/v5_special_price_share" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/v5_sp_regulation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp" >

                    <ImageView
                        android:id="@+id/v5_special_price_regulation"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/v5_special_price_regulation" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>